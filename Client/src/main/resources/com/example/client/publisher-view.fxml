<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<VBox xmlns:fx="http://javafx.com/fxml" alignment="CENTER" spacing="20.0"
      fx:controller="com.example.client.PublisherController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <GridPane>
        <Label fx:id="lbMessage" styleClass="label" GridPane.columnIndex="0" GridPane.rowIndex="0" text="Message: "/>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="0" fx:id="txtMessage"/>
    </GridPane>

    <Button fx:id="btnSend" styleClass="button" text="Send" onAction="#send"/>
    <Button fx:id="btnStop" styleClass="button" text="Stop" onAction="#stop"/>

    <stylesheets>
        <URL value="@client.css"/>
    </stylesheets>
</VBox>
