<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.text.Text?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.client.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="lbUserName" text="Username: " />
    <TextField fx:id="txtUsername" />
    <Label fx:id="lbPassword" text="Password: " />
    <PasswordField fx:id="txtPassword" />
    <Label fx:id="lbTopic" text="Topic: " />
    <TextField fx:id="txtTopic" />
    <Text fx:id="txtError" visible="false" style="color: red;" />
    <Button fx:id="btnStart" text="Start" onAction="#start"/>
</VBox>
